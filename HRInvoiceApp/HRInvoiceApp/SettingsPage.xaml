<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRInvoiceApp.SettingsPage">
    <ContentPage.Content>
        <StackLayout x:Name="settingsStackLayout">
            <Label Text="Voornaam *"></Label>
            <Entry x:Name="firstName" Placeholder="Voornaam"></Entry>
            <Label Text="Achternaam *"></Label>
            <Entry x:Name="lastName" Placeholder="Achternaam"></Entry>
            <Label Text="IBAN *"></Label>
            <Entry x:Name="bankNumber" Placeholder="IBAN"></Entry>
            <Label Text="Email adres *"></Label>
            <Entry x:Name="email" Placeholder="Email adres"></Entry>
            <Label Text="Mobiel nummer *"></Label>
            <Entry x:Name="mobileNumber" Placeholder="Mobiel nummer"></Entry>
            <Label Text="BTW nummer *"></Label>
            <Entry x:Name="vatNumber" Placeholder="BTW nummer"></Entry>
            <Label Text="KvK nummer *"></Label>
            <Entry x:Name="kvkNumber" Placeholder="KvK nummer"></Entry>
            <Label Text="Website"></Label>
            <Entry x:Name="website" Placeholder="Website"></Entry>
            <Button Text="Opslaan" Clicked="onSaveClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>