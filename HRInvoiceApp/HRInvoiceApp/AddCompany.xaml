<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRInvoiceApp.AddCompany">
    <ContentPage.Content>
        <StackLayout x:Name="addCompanyStackLayout">
            <Label Text="Bedrijfsnaam *"></Label>
            <Entry x:Name="addCompanyCompanyName" Placeholder="Bedrijfsnaam *"></Entry>
            <Label Text="KvK nummer *"></Label>
            <Entry x:Name="addCompanyKvKNumber" Placeholder="KvKNummer *"></Entry>
            <Label Text="Adres *"></Label>
            <Entry x:Name="addCompanyAddress" Placeholder="Adres *"></Entry>
            <Label Text="Adres toevoeging"></Label>
            <Entry x:Name="addCompanyAddressAddition" Placeholder="Adres toevoeging"></Entry>
            <Label Text="Stad *"></Label>
            <Entry x:Name="addCompanyCity" Placeholder="Stad *"></Entry>
            <Label Text="Provincie *"></Label>
            <Picker x:Name="addCompanyProvincePicker" ItemDisplayBinding="{Binding ProvinceName}"></Picker>
            <Label Text="Postcode *"></Label>
            <Entry x:Name="addCompanyZipCode" Placeholder="Postcode *"></Entry>
            <Button x:Name="saveButton"  Text="Opslaan" Clicked="saveCompany"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>