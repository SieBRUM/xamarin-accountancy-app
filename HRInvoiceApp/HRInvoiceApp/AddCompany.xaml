<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRInvoiceApp.AddCompany">
    <ContentPage.Content>
        <StackLayout x:Name="addCompanyStackLayout">
            <Label Text="Bedrijfsnaam *"></Label>
            <Entry x:Name="companyName" Placeholder="Bedrijfsnaam *" Text="{Binding}"></Entry>
            <Label Text="KvK nummer *"></Label>
            <Entry x:Name="KvKNumber" Placeholder="KvKNummer *" Text="{Binding}"></Entry>
            <Label Text="Adres *"></Label>
            <Entry x:Name="Address" Placeholder="Adres *" Text="{Binding}"></Entry>
            <Label Text="Adres toevoeging"></Label>
            <Entry x:Name="AddressAddition" Placeholder="Adres toevoeging" Text="{Binding}"></Entry>
            <Label Text="Stad *"></Label>
            <Entry x:Name="City" Placeholder="Stad *" Text="{Binding}"></Entry>
            <Label Text="Provincie *"></Label>
            <Picker x:Name="ProvincePicker" ItemDisplayBinding="{Binding ProvinceName}"></Picker>
            <Label Text="Postcode *"></Label>
            <Entry x:Name="ZipCode" Placeholder="Postcode *" Text="{Binding}"></Entry>
            <Button x:Name="saveButton"  Text="Opslaan" Clicked="saveCompany"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>