<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HRInvoiceApp.ListPage">
    <ContentPage.Content>
        <ListView x:Name="BanaanListview" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding UserLastName}" Detail="{Binding Designation}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
</ContentPage.Content>
</ContentPage>